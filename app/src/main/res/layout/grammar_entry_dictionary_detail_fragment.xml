<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context="ua.hneu.languagetrainer.pages.dictionary.EntryDictionaryDetail$PlaceholderFragment2" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="JLPT level: N3"
        android:id="@+id/grammar_levelTv"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:id="@+id/grammar_linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/grammar_ruleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="～たり …～たり"
            android:textSize="@dimen/xlargeText" />

        <TextView
            android:id="@+id/grammar_descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It makes a list of activities or attributes. It means something like &apos;this and that/sometimes this and sometimes that/in some parts this in other parts that&apos;. With nouns or -な adjectives it becomes &apos;～だったり …～だったりする&apos;."
            android:textSize="@dimen/buttonTextSize" />

        <ListView
            android:id="@+id/grammar_grammarExamplesListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>


</LinearLayout>