    <TextView
        android:id="@+id/reading"
        android:layout_width="0dp"
        android:layout_weight=".55"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="sdf"
        android:textSize="@dimen/buttonTextSize" >
    </TextView>

</LinearLayout>