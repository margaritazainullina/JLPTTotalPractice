    android:orientation="horizontal">

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_weight=".45"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="sdf"
        android:textSize="@dimen/buttonTextSize" >
