<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:scrollbars="vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="VocabularyResultActivity" >

    <TextView
        android:id="@+id/learnedWordsTextView"
        android:text="Learned words 10 out of 290"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/largeText"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <TextView
        android:id="@+id/totalPercentageTextView"
        android:layout_width="wrap_content"
        android:text="By now you've learned 10 words"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttonTextSize"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/sessionPercentageTextView"
        android:layout_width="wrap_content"
        android:text="YOu should be more attentive. Your correct answer rate is 10%"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttonTextSize"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/recommendationsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/largeText" />

    <TextView
        android:id="@+id/mistakesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/largeText" />

    <TextView
        android:id="@+id/cautionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/largeText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonRepeatTraining"
            style="@style/btnStyleOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonRepeatTrainingOnClick"
            android:text="@string/repeatTraining" />

        <Button
            android:id="@+id/buttonToMainMenu"
            style="@style/btnStyleOrange"
            android:layout_margin="@dimen/default_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonToMainMenuOnClick"
            android:text="@string/to_main_menu" />
    </LinearLayout>

</LinearLayout>