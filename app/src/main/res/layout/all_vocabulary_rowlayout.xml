<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/avr_kanji"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_weight=".4"
        android:gravity="center_vertical|left"
        android:text="文字"
        android:textSize="@dimen/largeText"></TextView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".40"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/avr_hiragana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical|left"
            android:text="もじ"
            android:textSize="@dimen/buttonTextSize"></TextView>

        <TextView
            android:id="@+id/avr_romaji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical|left"
            android:text="もじ"
            android:textSize="@dimen/buttonTextSize"></TextView>

        <TextView
            android:id="@+id/avr_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical|left"
            android:text="character"
            android:textSize="@dimen/buttonTextSize"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".20"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/avr_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="right"
            android:text="0/7"
            android:textSize="@dimen/buttonTextSize" />

        <ImageView
            android:id="@+id/learned_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yes" />
    </LinearLayout>
</LinearLayout>